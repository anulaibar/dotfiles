# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file (don't look in parent dir for additional configs)
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
indent_style = space
end_of_line = lf
insert_final_newline = true

[*.{js,html,sql}]
indent_size = 2

[*.py]
indent_size = 4
